{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <h2 class="text-center" style="margin-bottom: 5rem;">Connectez-vous !</h2>
    <br>
    <form action="{{ path("security_login") }}" method="post" class="text-center">
        <div class="form-group"><input placeholder="Email" required name="_username" type="text" class="form_control"></div>
        <div class="form-group"><input placeholder="Mot de passe" required name="_password" type="password" class="form_control"></div>
        <div class="text-center" style="margin-top: 5rem;">
            <button type="submit" class="btn btn-success">Se connecter !</button>
        </div>
    </form>    
{% endblock body %}